rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Users can create their own profile upon signing up.
      allow create: if request.auth != null;
    }

    // Rules for the 'budgets' collection
    match /budgets/{budgetId} {
      // Allow read/list only if the query is filtering by the user's own UID.
      // This prevents a user from listing all budgets.
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      
      // Allow a user to get their own budget document.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;

      // A user can create a budget document for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can update their own budget document.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow full access to subcollections (categories, transactions) if the user owns the parent budget document.
      match /{allPaths=**} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/budgets/$(budgetId)).data.userId == request.auth.uid;
      }
    }
  }
}
